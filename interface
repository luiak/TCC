    <script>
        // Variáveis globais
        let cursosData = [];
        
        // Inicialização
        document.addEventListener('DOMContentLoaded', function() {
            carregarDashboard();
            carregarCursos();
            carregarProfessores();
        });
        
        // Navegação entre seções
        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('nav button').forEach(b => b.classList.remove('active'));
            
            document.getElementById(sectionId).classList.add('active');
            event.target.classList.add('active');
            
            if (sectionId === 'agenda') carregarAgenda();
            if (sectionId === 'professores') carregarProfessores();
        }
        
        // Carregar Dashboard
        async function carregarDashboard() {
            // Simulação de dados - em produção, fazer requisição AJAX
            document.getElementById('totalCursos').textContent = '3';
            document.getElementById('totalProfessores').textContent = '4';
            document.getElementById('totalAulas').textContent = '156';
            document.getElementById('totalConflitos').textContent = '2';
        }
        
        // Carregar Cursos
        async function carregarCursos() {
            // Dados de exemplo - substituir por AJAX real
            cursosData = [
                {id: 1, nome: 'Desenvolvimento Web Full Stack', turno: 'Manhã', status: 'ativo'},
                {id: 2, nome: 'Backend com PHP', turno: 'Tarde', status: 'ativo'},
                {id: 3, nome: 'Frontend Avançado', turno: 'Noite', status: 'ativo'}
            ];
            
            const grid = document.getElementById('cursosGrid');
            const select = document.getElementById('cursoSelect');
            
            grid.innerHTML = '';
            select.innerHTML = '<option value="">-- Selecione um curso --</option>';
            
            cursosData.forEach(curso => {
                grid.innerHTML += `
                    <div class="calendar-card">
                        <h3>${curso.nome}</h3>
                        <p>Turno: ${curso.turno}</p>
                        <p>Status: <span class="badge badge-success">${curso.status}</span></p>
                    </div>
                `;
                
                select.innerHTML += `<option value="${curso.id}">${curso.nome}</option>`;
            });
        }
        
        // Form Gerar Calendário
        document.getElementById('formGerarCalendario').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const cursoId = document.getElementById('cursoSelect').value;
            const resultadoDiv = document.getElementById('resultadoGeracao');
            
            resultadoDiv.innerHTML = '<div class="loading"><div class="spinner"></div><p>Gerando calendário...</p></div>';
            
            // Simulação - em produção usar FormData e fetch/ajax
            setTimeout(() => {
                const resultado = {
                    success: true,
                    aulas_inseridas: 45,
                    total_aulas: 50,
                    conflitos: ['Conflito em 2025-03-15 para JavaScript']
                };
                
                if (resultado.success) {
                    let html = `
                        <div class="alert alert-success">
                            ✅ Calendário gerado com sucesso!
                        </div>
                    `;
                    
                    if (resultado.conflitos && resultado.conflitos.length > 0) {
                        html += `
                            <div class="alert alert-warning">
                                ⚠️ Atenção: Alguns conflitos foram detectados:
                                <ul style="margin-top: 10px;">
                                    ${resultado.conflitos.map(c => `<li>${c}</li>`).join('')}
                                </ul>
                            </div>
                        `;
                    }
                    
                    document.getElementById('estatisticasGeracao').innerHTML = `
                        <p><strong>Aulas Agendadas:</strong> ${resultado.aulas_inseridas} de ${resultado.total_aulas}</p>
                        <p><strong>Taxa de Sucesso:</strong> ${Math.round(resultado.aulas_inseridas/resultado.total_aulas*100)}%</p>
                        <p><strong>Conflitos:</strong> ${resultado.conflitos.length}</p>
                    `;
                    
                    resultadoDiv.innerHTML = html;
                } else {
                    resultadoDiv.innerHTML = `
                        <div class="alert alert-danger">
                            ❌ Erro ao gerar calendário: ${resultado.message}
                        </div>
                    `;
                }
            }, 2000);
        });
        
        // Carregar Agenda
        function carregarAgenda() {
            const tabelaDiv = document.getElementById('tabelaAgenda');
            
            // Dados de exemplo
            const aulas = [
                {data: '2025-10-16', hora: '08:00-12:00', curso: 'Web Full Stack', professor: 'João Silva', competencia: 'HTML e CSS'},
                {data: '2025-10-16', hora: '13:00-17:00', curso: 'Backend PHP', professor: 'Maria Santos', competencia: 'PHP Backend'},
                {data: '2025-10-17', hora: '18:30-22:30', curso: 'Frontend Avançado', professor: 'Ana Costa', competencia: 'JavaScript'}
            ];
            
            let html = `
                <table>
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Horário</th>
                            <th>Curso</th>
                            <th>Professor</th>
                            <th>Competência</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
            `;
            
            aulas.forEach(aula => {
                html += `
                    <tr>
                        <td>${aula.data}</td>
                        <td>${aula.hora}</td>
                        <td>${aula.curso}</td>
                        <td>${aula.professor}</td>
                        <td>${aula.competencia}</td>
                        <td><span class="badge badge-success">Agendado</span></td>
                    </tr>
                `;
            });
            
            html += '</tbody></table>';
            tabelaDiv.innerHTML = html;
        }
        
        // Carregar Professores
        function carregarProfessores() {
            const tbody = document.querySelector('#tabelaProfessores tbody');
            
            // Dados de exemplo
            const professores = [
                {nome: 'João Silva', email: 'joao@senai.br', especialidade: 'Programação Web', carga: 40, status: 'ativo'},
                {nome: 'Maria Santos', email: 'maria@senai.br', especialidade: 'Banco de Dados', carga: 40, status: 'ativo'},
                {nome: 'Pedro Oliveira', email: 'pedro@senai.br', especialidade: 'Redes', carga: 30, status: 'ativo'},
                {nome: 'Ana Costa', email: 'ana@senai.br', especialidade: 'Design UI/UX', carga: 40, status: 'ativo'}
            ];
            
            tbody.innerHTML = professores.map(p => `
                <tr>
                    <td>${p.nome}</td>
                    <td>${p.email}</td>
                    <td>${p.especialidade}</td>
                    <td>${p.carga}h/semana</td>
                    <td><span class="badge badge-success">${p.status}</span></td>
                    <td>
                        <button class="btn btn-primary" style="padding: 5px 15px;">Editar</button>
                    </td>
                </tr>
            `).join('');
        }
        
        // Modal functions
        function abrirModalProfessor() {
            document.getElementById('modalProfessor').classList.add('active');
        }
        
        function fecharModal() {
            document.getElementById('modalProfessor').classList.remove('active');
        }
        
        // Form Professor
        document.getElementById('formProfessor').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Professor adicionado com sucesso!');
            fecharModal();
            carregarProfessores();
        });
    </script>
</body>
</html>
